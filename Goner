-- IDs dos acessÃ³rios do Goner
local gonerIDs = {
    17770317484, -- CabeÃ§a do Golpista
    17812417356, -- Goner
    17812415139, -- Goner
    17772174303, -- Goners Body Spikes
    17822722698, -- Goners Right Arm Spikes
