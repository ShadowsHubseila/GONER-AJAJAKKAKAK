-- ================================================================
-- SISTEMA DE EMOTES COM BLOQUEIO TOTAL AO MORRER
-- SEM AUTO-REATIVAÃ‡ÃƒO NO RESPAWN
-- ================================================================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local animate = character:WaitForChild("Animate")

-- ================================================================
-- VARIÃVEIS DE CONTROLE
-- ================================================================
local EmoteIDs = {
        idle = "112337030269214",     -- Floating quando parado
    walk = "12518152696",          -- Divino quando andando
    run = "12518152696",           -- Divino quando correndo
    jump = "507765000"       -- Fly Jump quando pulando
}

local Settings = {
    ["Fade In"] = 0.2,
    ["Fade Out"] = 0.2,
    ["Weight"] = 1,
    ["Speed"] = 1,
    ["Time Position"] = 0
}

local OriginalAnimations = {}
local CurrentTracks = {}
local lastState = "idle"
local stateTime = 0
local isSystemActive = false
local updateConnection = nil
local blockConnection = nil
local isDead = false
local wasActiveBefore = false -- NOVA: Controla se deve reativar

-- ================================================================
-- BACKUP DAS ANIMAÃ‡Ã•ES ORIGINAIS
-- ================================================================
local function backupOriginalAnimations()
    print("ğŸ’¾ Salvando animaÃ§Ãµes originais...")
    
    OriginalAnimations = {
        idle = {},
        walk = {},
        run = {},
        jump = {},
        fall = {},
        climb = {},
        sit = {}
    }
    
    if animate:FindFirstChild("idle") then
        for _, anim in pairs(animate.idle:GetChildren()) do
            if anim:IsA("Animation") then
                table.insert(OriginalAnimations.idle, anim.AnimationId)
            end
        end
    end
    
    if animate:FindFirstChild("walk") and animate.walk:FindFirstChild("WalkAnim") then
        OriginalAnimations.walk = animate.walk.WalkAnim.AnimationId
    end
    
    if animate:FindFirstChild("run") and animate.run:FindFirstChild("RunAnim") then
        OriginalAnimations.run = animate.run.RunAnim.AnimationId
    end
    
    if animate:FindFirstChild("jump") and animate.jump:FindFirstChild("JumpAnim") then
        OriginalAnimations.jump = animate.jump.JumpAnim.AnimationId
    end
    
    if animate:FindFirstChild("fall") and animate.fall:FindFirstChild("FallAnim") then
        OriginalAnimations.fall = animate.fall.FallAnim.AnimationId
    end
    
    if animate:FindFirstChild("climb") and animate.climb:FindFirstChild("ClimbAnim") then
        OriginalAnimations.climb = animate.climb.ClimbAnim.AnimationId
    end
    
    print("âœ… Backup concluÃ­do!")
end

backupOriginalAnimations()

-- ================================================================
-- BLOQUEADOR PERMANENTE DE ANIMAÃ‡Ã•ES
-- ================================================================
local function startAnimationBlocker()
    if blockConnection then
        blockConnection:Disconnect()
        blockConnection = nil
    end
    
    print("ğŸ”’ BLOQUEADOR ATIVADO - Matando animaÃ§Ãµes em loop...")
    
    blockConnection = RunService.Heartbeat:Connect(function()
        if isDead and humanoid then
            -- Para QUALQUER animaÃ§Ã£o que tentar rodar
            for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
                if track.IsPlaying then
                    track:Stop(0)
                end
            end
            
            -- Para tracks customizados
            for _, track in pairs(CurrentTracks) do
                if track and track.IsPlaying then
                    track:Stop(0)
                end
            end
            
            -- Garante que Animate fica desabilitado
            if animate and not animate.Disabled then
                animate.Disabled = true
            end
        end
    end)
end

-- ================================================================
-- FUNÃ‡ÃƒO DE PARADA TOTAL AO MORRER
-- ================================================================
local function stopOnDeath()
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    print("ğŸ’€ PERSONAGEM MORREU!")
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    
    -- Salva se estava ativo antes de morrer
    wasActiveBefore = isSystemActive
    
    isDead = true
    isSystemActive = false
    
    -- Para o loop de atualizaÃ§Ã£o
    if updateConnection then
        updateConnection:Disconnect()
        updateConnection = nil
        print("ğŸ”´ Loop de atualizaÃ§Ã£o DESCONECTADO")
    end
    
    -- Para TODAS as animaÃ§Ãµes
    for _, track in pairs(CurrentTracks) do
        pcall(function()
            if track then
                track:Stop(0)
                track:Destroy()
            end
        end)
    end
    CurrentTracks = {}
    
    for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
        pcall(function()
            track:Stop(0)
        end)
    end
    
    -- Desabilita Animate Script
    if animate then
        animate.Disabled = true
        print("ğŸ”´ Animate Script DESABILITADO")
    end
    
    -- Inicia bloqueador em loop
    startAnimationBlocker()
    
    print("ğŸ”’ BLOQUEIO TOTAL ATIVO!")
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
end

-- ================================================================
-- RESTAURAR ANIMAÃ‡Ã•ES ORIGINAIS
-- ================================================================
local function restoreOriginalAnimations()
    print("ğŸ”„ Restaurando animaÃ§Ãµes originais...")
    
    -- Para tudo primeiro
    for _, track in pairs(CurrentTracks) do
        pcall(function()
            if track then
                track:Stop(0)
                track:Destroy()
            end
        end)
    end
    CurrentTracks = {}
    
    for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
        pcall(function()
            track:Stop(0)
        end)
    end
    
    wait(0.3)
    
    -- Restaura IDs originais
    if animate:FindFirstChild("idle") then
        local index = 1
        for _, anim in pairs(animate.idle:GetChildren()) do
            if anim:IsA("Animation") and OriginalAnimations.idle[index] then
                anim.AnimationId = OriginalAnimations.idle[index]
                index = index + 1
            end
        end
    end
    
    if animate:FindFirstChild("walk") and animate.walk:FindFirstChild("WalkAnim") then
        animate.walk.WalkAnim.AnimationId = OriginalAnimations.walk
    end
    
    if animate:FindFirstChild("run") and animate.run:FindFirstChild("RunAnim") then
        animate.run.RunAnim.AnimationId = OriginalAnimations.run
    end
    
    if animate:FindFirstChild("jump") and animate.jump:FindFirstChild("JumpAnim") then
        animate.jump.JumpAnim.AnimationId = OriginalAnimations.jump
    end
    
    if animate:FindFirstChild("fall") and animate.fall:FindFirstChild("FallAnim") then
        animate.fall.FallAnim.AnimationId = OriginalAnimations.fall
    end
    
    if animate:FindFirstChild("climb") and animate.climb:FindFirstChild("ClimbAnim") then
        animate.climb.ClimbAnim.AnimationId = OriginalAnimations.climb
    end
    
    animate.Disabled = true
    wait(0.1)
    animate.Disabled = false
    
    print("âœ… AnimaÃ§Ãµes originais restauradas!")
end

-- ================================================================
-- PARADA COMPLETA DO SISTEMA
-- ================================================================
local function stopSystemCompletely()
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    print("ğŸ›‘ PARANDO SISTEMA COMPLETAMENTE...")
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    
    isSystemActive = false
    isDead = false
    wasActiveBefore = false -- NÃƒO vai reativar no respawn
    
    if updateConnection then
        updateConnection:Disconnect()
        updateConnection = nil
        print("ğŸ”´ Loop desconectado")
    end
    
    if blockConnection then
        blockConnection:Disconnect()
        blockConnection = nil
        print("ğŸ”“ Bloqueador desconectado")
    end
    
    restoreOriginalAnimations()
    
    lastState = "idle"
    stateTime = 0
    
    print("âœ… Sistema TOTALMENTE parado!")
    print("ğŸ® AnimaÃ§Ãµes normais do Roblox ativas")
    print("ğŸ’¡ Use /start para reativar")
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
end

-- ================================================================
-- LOADTRACK
-- ================================================================
local function LoadEmoteTrack(id, trackName)
    if not humanoid or humanoid.Health <= 0 or not isSystemActive or isDead then 
        return 
    end
    
    if CurrentTracks[trackName] then 
        CurrentTracks[trackName]:Stop(Settings["Fade Out"]) 
        CurrentTracks[trackName] = nil
    end
    
    local animId
    local ok, result = pcall(function() 
        return game:GetObjects("rbxassetid://" .. tostring(id)) 
    end)
    
    if ok and result and #result > 0 then
        local anim = result[1]
        if anim:IsA("Animation") then
            animId = anim.AnimationId
        else
            animId = "rbxassetid://" .. tostring(id)
        end
    else
        animId = "rbxassetid://" .. tostring(id)
    end
    
    local newAnim = Instance.new("Animation")
    newAnim.AnimationId = animId
    newAnim.Name = "EmoteMovement_" .. trackName
    
    local newTrack = humanoid:LoadAnimation(newAnim)
    newTrack.Priority = Enum.AnimationPriority.Action4
    
    local weight = Settings["Weight"]
    if weight == 0 then weight = 0.001 end
    
    newTrack:Play(Settings["Fade In"], weight, Settings["Speed"])
    newTrack.TimePosition = math.clamp(Settings["Time Position"], 0, 1) * newTrack.Length
    newTrack.Looped = (trackName ~= "jump")
    
    CurrentTracks[trackName] = newTrack
    
    return newTrack
end

-- ================================================================
-- DETECÃ‡ÃƒO DE ESTADO
-- ================================================================
local function detectMovementState()
    if not humanoid or humanoid.Health <= 0 or isDead then return "idle" end
    
    local moveDirection = humanoid.MoveDirection
    local walkSpeed = humanoid.WalkSpeed
    local jumpState = humanoid:GetState()
    
    if jumpState == Enum.HumanoidStateType.Jumping or 
       jumpState == Enum.HumanoidStateType.Freefall then
        return "jump"
    elseif moveDirection.Magnitude > 0.1 then
        if walkSpeed >= 20 then
            return "run"
        else
            return "walk"
        end
    else
        return "idle"
    end
end

-- ================================================================
-- ATUALIZAÃ‡ÃƒO DE MOVIMENTO
-- ================================================================
local function updateEmoteMovement()
    if not isSystemActive or not humanoid or humanoid.Health <= 0 or isDead then 
        return 
    end
    
    local currentTime = tick()
    local newState = detectMovementState()
    
    if newState ~= lastState and (currentTime - stateTime) > 0.3 then
        
        if CurrentTracks[lastState] and CurrentTracks[lastState].IsPlaying then
            CurrentTracks[lastState]:Stop(Settings["Fade Out"])
        end
        
        if EmoteIDs[newState] then
            LoadEmoteTrack(EmoteIDs[newState], newState)
        end
        
        lastState = newState
        stateTime = currentTime
    end
end

-- ================================================================
-- EVENTOS DE MORTE
-- ================================================================
local function connectDeathEvents(hum)
    if not hum then return end
    
    hum.Died:Connect(function()
        stopOnDeath()
    end)
    
    hum.StateChanged:Connect(function(oldState, newState)
        if newState == Enum.HumanoidStateType.Dead then
            stopOnDeath()
        end
    end)
    
    hum.HealthChanged:Connect(function(health)
        if health <= 0 and not isDead then
            stopOnDeath()
        end
    end)
end

connectDeathEvents(humanoid)

-- ================================================================
-- SUBSTITUIR ANIMATE SCRIPT
-- ================================================================
local function replaceAnimateScript()
    print("ğŸ”„ Substituindo Animate Script...")
    
    if not character or not humanoid or humanoid.Health <= 0 or isDead then 
        return false 
    end
    
    local success = false
    
    pcall(function()
        if animate then
            animate.Disabled = true
            
            for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
                track:Stop(0.3)
            end
            
            wait(0.5)
            
            if animate:FindFirstChild("idle") and animate.idle:FindFirstChild("Animation1") then
                animate.idle.Animation1.AnimationId = "rbxassetid://" .. EmoteIDs.idle
            end
            if animate:FindFirstChild("walk") and animate.walk:FindFirstChild("WalkAnim") then
                animate.walk.WalkAnim.AnimationId = "rbxassetid://" .. EmoteIDs.walk
            end
            if animate:FindFirstChild("run") and animate.run:FindFirstChild("RunAnim") then
                animate.run.RunAnim.AnimationId = "rbxassetid://" .. EmoteIDs.run
            end
            if animate:FindFirstChild("jump") and animate.jump:FindFirstChild("JumpAnim") then
                animate.jump.JumpAnim.AnimationId = "rbxassetid://" .. EmoteIDs.jump
            end
            
            animate.Disabled = false
            success = true
            print("âœ… Animate Script substituÃ­do!")
        end
    end)
    
    return success
end

-- ================================================================
-- SISTEMA CUSTOMIZADO
-- ================================================================
local function startCustomTrackSystem()
    print("ğŸ”„ Iniciando sistema customizado...")
    
    if not humanoid or humanoid.Health <= 0 or isDead then 
        return false 
    end
    
    for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
        track:Stop(0.3)
    end
    
    wait(0.5)
    
    LoadEmoteTrack(EmoteIDs.idle, "idle")
    isSystemActive = true
    
    print("âœ… Sistema ativo!")
    return true
end

-- ================================================================
-- ATIVAÃ‡ÃƒO DO SISTEMA
-- ================================================================
local function activateEmoteMovementSystem()
    if not humanoid or humanoid.Health <= 0 or isDead then
        print("âŒ NÃ£o Ã© possÃ­vel ativar - personagem morto")
        return false
    end
    
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    print("ğŸ­ ATIVANDO SISTEMA DE EMOTES")
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    
    local methods = {
        {name = "Animate Script", func = replaceAnimateScript},
        {name = "Sistema Custom", func = startCustomTrackSystem}
    }
    
    local success = false
    
    for i, method in ipairs(methods) do
        print("ğŸ¯ MÃ©todo " .. i .. ": " .. method.name)
        
        if method.func() then
            success = true
            print("âœ… " .. method.name .. " funcionou!")
            break
        end
        
        wait(0.5)
    end
    
    if success then
        if updateConnection then
            updateConnection:Disconnect()
        end
        
        updateConnection = RunService.Heartbeat:Connect(function()
            if humanoid and humanoid.Health > 0 and isSystemActive and not isDead then
                updateEmoteMovement()
            end
        end)
        
        wasActiveBefore = true -- Marca que foi ativado manualmente
        
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        print("ğŸ‰ SISTEMA ATIVADO!")
        print("ğŸ’€ Bloqueio total ao morrer")
        print("ğŸ”„ Reaplica automaticamente ao respawn")
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        return true
    else
        print("âŒ Falha na ativaÃ§Ã£o")
        return false
    end
end

-- ================================================================
-- COMANDOS
-- ================================================================
player.Chatted:Connect(function(message)
    local msg = message:lower()
    
    if msg == "/start" or msg == "/ativar" then
        if humanoid and humanoid.Health > 0 and not isDead then
            activateEmoteMovementSystem()
        else
            print("âŒ Personagem morto - aguarde respawn e use /start novamente")
        end
        
    elseif msg == "/stop" or msg == "/parar" then
        stopSystemCompletely()
        
    elseif msg == "/status" then
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        print("ğŸ“Š STATUS DO SISTEMA")
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        print("ğŸ”¹ Sistema: " .. (isSystemActive and "âœ… ATIVO" or "âŒ INATIVO"))
        print("ğŸ”¹ Morto: " .. (isDead and "ğŸ’€ SIM" or "ğŸ’š NÃƒO"))
        print("ğŸ”¹ Bloqueador: " .. (blockConnection and "ğŸ”’ ATIVO" or "ğŸ”“ INATIVO"))
        print("ğŸ”¹ Vai reativar no respawn: " .. (wasActiveBefore and "âœ… SIM" or "âŒ NÃƒO"))
        if humanoid then
            print("ğŸ”¹ SaÃºde: " .. math.floor(humanoid.Health) .. "/" .. humanoid.MaxHealth)
        end
        local trackCount = 0
        for _ in pairs(CurrentTracks) do trackCount = trackCount + 1 end
        print("ğŸ”¹ Tracks: " .. trackCount)
        print("ğŸ”¹ Loop ativo: " .. (updateConnection and "âœ… SIM" or "âŒ NÃƒO"))
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        
    elseif msg:match("^/setid%s+(%w+)%s+(%d+)") then
        local state, newId = msg:match("^/setid%s+(%w+)%s+(%d+)")
        if EmoteIDs[state] then
            EmoteIDs[state] = newId
            print("âœ… ID alterado: " .. state .. " = " .. newId)
        else
            print("âŒ Estado invÃ¡lido")
        end
        
    elseif msg == "/help" or msg == "/ajuda" then
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        print("ğŸ® COMANDOS")
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        print("ğŸ”¹ /start - Ativar sistema")
        print("ğŸ”¹ /stop - Parar TUDO (nÃ£o reativa)")
        print("ğŸ”¹ /status - Ver status completo")
        print("ğŸ”¹ /setid [estado] [id] - Mudar emote")
        print("ğŸ”¹ /help - Ajuda")
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
        print("ğŸ’€ Ao morrer: BLOQUEIA tudo")
        print("ğŸ”„ Ao respawnar: Volta SE estava ativo")
        print("ğŸ›‘ Use /stop para desativar permanente")
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    end
end)

-- ================================================================
-- RESPAWN - SEM AUTO-ATIVAÃ‡ÃƒO FORÃ‡ADA
-- ================================================================
player.CharacterAdded:Connect(function(newCharacter)
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    print("ğŸ”„ RESPAWN DETECTADO")
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
    
    character = newCharacter
    humanoid = newCharacter:WaitForChild("Humanoid")
    animate = newCharacter:WaitForChild("Animate")
    
    -- LIMPA TUDO
    isDead = false
    CurrentTracks = {}
    lastState = "idle"
    stateTime = 0
    
    -- Para e remove o bloqueador
    if blockConnection then
        blockConnection:Disconnect()
        blockConnection = nil
        print("ğŸ”“ Bloqueador removido")
    end
    
    if updateConnection then
        updateConnection:Disconnect()
        updateConnection = nil
        print("ğŸ”´ Loop anterior desconectado")
    end
    
    -- Faz novo backup
    backupOriginalAnimations()
    
    -- Reconecta eventos de morte
    connectDeathEvents(humanoid)
    
    wait(3)
    
    -- SÃ“ reativa se estava ativo antes de morrer
    if wasActiveBefore then
        print("ğŸ”„ Sistema estava ativo - reaplicando...")
        activateEmoteMovementSystem()
    else
        print("â¸ï¸  Sistema nÃ£o estava ativo - mantendo parado")
        print("ğŸ’¡ Use /start para ativar")
    end
    
    print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
end)

