    81713181781035, -- Capa
}

-- ID da animaÃ§Ã£o especÃ­fica
local animationID = 5319922112

-- FunÃ§Ã£o para equipar item
local function equipItem(id)
    pcall(function()
        local args = {[1] = id}
        game:GetService("ReplicatedStorage").Remotes.Wear:InvokeServer(unpack(args))
    end)
end

-- FunÃ§Ã£o para remover todos os acessÃ³rios
local function removeAllAccessories()
    print("ğŸ—‘ï¸ Removendo todos os acessÃ³rios antigos...")
    
    -- Tenta diferentes remotes possÃ­veis para remover
    local removeCommands = {
        "RemoveAccessory",
        "UnequipAll", 
        "ClearAccessories",
        "RemoveAll",
        "ResetAvatar"
    }
    
    for _, commandName in pairs(removeCommands) do
        pcall(function()
            if game:GetService("ReplicatedStorage").Remotes:FindFirstChild(commandName) then
                print("ğŸ”„ Tentando: " .. commandName)
                game:GetService("ReplicatedStorage").Remotes[commandName]:FireServer()
            end
        end)
    end
    
    -- MÃ©todo alternativo: tentar remover pelo character
    pcall(function()
        local character = LocalPlayer.Character
        if character then
            for _, child in pairs(character:GetChildren()) do
                if child:IsA("Accessory") then
                    print("ğŸ—‘ï¸ Removendo: " .. child.Name)
                    child:Destroy()
                end
            end
        end
    end)
    
    print("âœ… Limpeza concluÃ­da!")
    wait(1)
end

-- Remover acessÃ³rios antigos primeiro
removeAllAccessories()

-- Equipar todos os acessÃ³rios do Goner
print("ğŸ”¥ EQUIPANDO VISUAL GONER ğŸ”¥")

for i, itemID in pairs(gonerIDs) do
    print("Equipando acessÃ³rio " .. i .. "/7: " .. itemID)
    equipItem(itemID)
    wait(1)
end

print("âœ… Todos os acessÃ³rios Goner equipados!")

